mixin facebook(url, type)
  if type == 'video'
    div.responsive-video
      iframe(src="https://www.facebook.com/plugins/video.php?href="+url+"&show_text=0" style="border:none;overflow:hidden" scrolling="no" frameborder="0" allowTransparency="true" allowFullScreen="true")
  else if type == 'post'
    div.facebook-post
      iframe(src="https://www.facebook.com/plugins/post.php?href="+url+"&width=500" style="border:none;overflow:hidden" scrolling="no" frameborder="0" allowTransparency="true" width="500" height="520")
